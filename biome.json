{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["**", "!**/dist", "!**/.dist", "!**/.turbo", "!node_modules"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"lineWidth": 95,
			"bracketSpacing": true,
			"quoteStyle": "double",
			"semicolons": "asNeeded",
			"trailingCommas": "none",
			"jsxQuoteStyle": "double",
			"arrowParentheses": "always"
		}
	}
}
